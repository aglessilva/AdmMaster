
@{
    ViewData["Title"] = "Advogado";
}

<h4>Pesquisar Advogado</h4>
<form>
    <div class="row">
        <div class="input-field col s2">
            <input id="Nu_Oab"  type="text" autocomplete="off" style='text-transform:uppercase' />
            <label>N° OAB</label>
        </div>
        <div class="input-field col s4">
            <input id="no_advogado" type="text" autocomplete="off" />
            <label>Nome</label>
        </div>
        <div class="input-field col s3">
            <select id="tipo_advogado" >
                <option value="0" selected >Todos</option>
                <option value="1">Interno</option>
                <option value="2">Reclamante</option>
            </select>
            <label>Tipo</label>
        </div>
        <div class="input-field col s3">
            <select id="StatusFilter">
                <option value="" selected>Todos</option>
                <option value="1">Ativo</option>
                <option value="0">Inativo</option>
            </select>
            <label>Status</label>
        </div>
    </div>

    <div class="row">
        <div class="col s12">
            <a class="waves-effect waves-light btn-small" id="btnSearch"><i class="material-icons left">search</i>Pesquisar</a>
            <a class="waves-effect waves-light btn-small" id="btnClear"><i class="material-icons left">clear</i>Limpar</a>
            <a asp-controller="Advogado" asp-action="Create" class="waves-effect waves-light btn-small"><i class="material-icons left small">add</i>Novo Advogado</a>
        </div>
    </div>
</form>
<hr>
<footer id="DivRenderData" style="display:none;">
    <partial name="ListRecord" />
</footer>