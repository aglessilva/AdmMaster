@{
    ViewData["Title"] = "Comarcas";
}

<h4>Pesquisar Comarcas</h4>

<form>
    <div class="row">

        <div class="input-field col s3">
            <select id="Sigla" asp-items="@WebAdministrator.Util.Utility.GetSigla()">
                <option value="">Todos</option>
            </select>
            <label>Sigla - Estado</label>
        </div>

        <div class="input-field col s7">
            @*<i class="material-icons prefix">group</i>*@
            <input id="cidade" type="text">
            <label for="cidade">Cidade</label>
        </div>

        <div class="input-field col s2">
            <select id="StatusFilter">
                <option value="" selected>Todos</option>
                <option value="1">Ativo</option>
                <option value="0">Inativo</option>
            </select>
            <label>Status</label>
        </div>
    </div>
    
    <div class="row">
        <div class="col s12">
            <a class="waves-effect waves-light btn-small" id="btnSearch"><i class="material-icons left">search</i>Pesquisar</a>
            <a class="waves-effect waves-light btn-small" id="btnClear"><i class="material-icons left">clear</i>Limpar</a>
            <a asp-controller="Comarca" asp-action="Create" class="waves-effect waves-light btn-small"><i class="material-icons left small">add</i>Nova Comarca</a>
        </div>
    </div>
</form>
<hr>
<footer id="DivRenderData" style="display:none;">
    <partial name="ListRecord" />
</footer>